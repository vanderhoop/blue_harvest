Login

<% if session[:user_id].nil? %>
  <%= form_tag(login_path, :method=>'post') do %>
    <%= text_field_tag :email %>
    <%= password_field_tag :password %>
    <%= submit_tag %>
  <% end %>
<% else %>
  <%= form_tag(logout_path, :method => 'post') do %>
    <%= submit_tag %>
  <% end %>
<% end %>
